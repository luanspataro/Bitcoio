@model Bitcoio.Models.BitcoioModel

@{
    ViewData["Title"] = "Bitcóio";
}

<!doctype html>
<html lang="pt">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />
    <script src="~/js/site.js"></script>
    <title>@ViewData["Title"]</title>
</head>
<body>

    <!-- Hero -->
    <section id="hero" class="min-vh-100 d-flex align-items-center text-center">
        <div class="container">
            <div class="row">
                <div class="col-12 section-padding">
                    <h1 class="text-uppercase text-white fw-semibold display-4 mt-1 initial-text">
                        Quanto você
                        <span style="color: #f2a900">teria?</span>
                        <i class="fa-brands fa-bitcoin fa-sm" style="color: #f2a900;"></i>
                    </h1>

                    <h6 class="text-white mt-3 mb-4 initial-text">QUANTO VOCÊ GANHARIA SE TIVESSE COMPRADO BITCOIN?</h6>

                    <div class="element">
                        <form id="bitcoinForm" method="post">
                            <div class="d-flex justify-content-center">

                                <div class="form-group w-75 mt-3">
                                    <div class="form-row hide-inputbtns">
                                        <label asp-for="PurchaseValue" for="c1"></label>
                                        <input asp-for="PurchaseValue" type="number" placeholder="1000" min="1" max="9999999999" step="0.01" data-number-to-fixed="2" data-number-stepfactor="100" class="currency form-control shadow-none" id="c1" value="@Model.PurchaseValue ?? 1000" />
                                    </div>

                                    <label asp-for="PurchaseDate" class="control-label"></label>
                                    <input asp-for="PurchaseDate" class="form-control shadow-none"
                                           max="@DateTime.Now.AddDays(-1).ToString("yyyy-MM-dd")"
                                           min="2010-07-18"
                                           value="@Model.PurchaseDate == DateTime.MinValue ? DateTime.Now.ToString(" yyyy-MM-dd") : Model.PurchaseDate.ToString("yyyy-MM-dd")" />
                                    <span asp-validation-for="PurchaseDate" class="text-danger"></span>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-warning mt-3">Calcular</button>
                        </form>

                        <!-- Btc Price Function -->
                        <div id="result"></div>

                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="wave-separator">
        <img src="/img/onda_branca.svg" alt="wave" />
    </div>

    <!-- About -->
    <section id="about" class="section-padding">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center">
                    <div class="section-title mb-0">

                        <h1 class="display-4 fw-semibold">Sobre a calculadora</h1>
                        <div class="line mb-0"></div>

                        <!-- Animation -->
                        <div class="d-flex justify-content-center mt-3">
                            <script src="https://unpkg.com/@@dotlottie/player-component@latest/dist/dotlottie-player.mjs" type="module"></script>
                            <dotlottie-player src="https://lottie.host/0c901d3c-5935-44c2-9ea3-04ee744c8dea/ALCTGL2HLu.json" background="transparent" speed="1" style="width: 300px; height: 300px;" loop autoplay></dotlottie-player>
                        </div>

                        <p class="mt-3">
                            A calculadora tem o objetivo de simular o quanto você ganharia caso tivesse comprado bitcoin
                            em determinada data. Com base no preço médio do dia escolhido, é feito o cálculo do valor
                            e percentual de lucro. Se for iniciante e quiser entender melhor o Bitcoin, clique
                            <a href="https://proton.me/pt-br/wallet/bitcoin-guide-for-newcomers" target="_blank" rel="noopener noreferrer" style="color: #f2a900">aqui.</a>
                        </p>


                        <i class="ri-token-swap-fill fa-xl"></i>

                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>